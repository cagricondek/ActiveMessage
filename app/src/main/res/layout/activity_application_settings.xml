    <TextView
        android:id="@+id/Tema"
        android:layout_width="82dp"
        android:layout_height="25dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="446dp"
        android:text="Temalar"
        android:textColor="@color/colorPhoneLoginTextPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/temaDescription"
        android:layout_width="139dp"
        android:layout_height="21dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="429dp"
        android:text="Temalar, Duvar Kağıdı"
        android:textColor="@color/colorDivider"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/bildirimler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="330dp"
