<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicationSettingsActivity">

    <include
        android:id="@+id/application_settings_toolbar"
        layout="@layout/app_bar_layout"></include>

    <ImageView
        android:id="@+id/hesap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="501dp"
        android:padding="10dp"
        android:src="@drawable/profile"></ImageView>

    <TextView
        android:id="@+id/Hesap"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="535dp"
        android:layout_toStartOf="@+id/hesap"
        android:text="Hesap"
        android:textColor="@color/colorPhoneLoginTextPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/HesapDescription"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="516dp"
        android:text="Hesap İşlemleri, Şifre Değiştir"
        android:textColor="@color/colorDivider"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/tema"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/application_settings_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="424dp"
