<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileEditActivity"
    >


    <TextView
            android:id="@+id/up_menu_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Çağrı Cöndek"
            android:textAlignment="center"
            android:textColor="@color/colorPhoneLoginTextPrimary"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visit_profile_image"
        app:layout_constraintVertical_bias="0.038"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/up_menu_profession_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilgisayar Mühendisi"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/up_menu_address_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="İstanbul,Türkiye"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/up_menu_profession_textView" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBlackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kullanıcı Adı:" />

                        <TextView
                            android:id="@+id/visit_username"
                            style="@style/TextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cagricondek34" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBlackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefon:" />

                        <TextView
                            android:id="@+id/visit_phone"
                            style="@style/TextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+905462406981" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_mail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBlackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email:" />

                        <TextView
                            android:id="@+id/visit_email"
                            style="@style/TextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cagricondek@gmail.com" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_address" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBlackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Adres:" />

                        <TextView
                            android:id="@+id/visit_address"
                            style="@style/TextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="İstanbul,Türkiye" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <Button
            android:id="@+id/send_message_request_button"
            style="@style/AlertDialog"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
            android:background="@drawable/requests_button"
            android:drawableLeft="@drawable/ic_mail_register"
            android:drawablePadding="-20dp"
            android:text="Arkadaş ekle"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/ic_profile_edit"
            android:visibility="visible"></Button>

            <Button
                android:id="@+id/decline_message_request_button"
                style="@style/AlertDialog"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="220dp"
                android:background="@drawable/requests_decline_button"
                android:drawablePadding="-10dp"
                android:text="İptal et"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/ic_profile_edit"
                android:visibility="invisible"></Button>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>