<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPhoneLoginPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custom_profile_IMAGE"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:cropToPadding="true"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/custom_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:ellipsize="end"

            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Display UserName"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/custom_user_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_profile_name"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="3dp"
            android:text="Last Seen"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/phoneSoundCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/phone_sound_call"></ImageButton>

        <ImageButton
            android:id="@+id/phoneVideoCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/phoneSoundCall"
            android:background="@drawable/ic_video_call"></ImageButton>

        <ImageButton
            android:id="@+id/chatOptionsMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/phoneVideoCall"
            android:background="@drawable/ic_chat_options"></ImageButton>

    </RelativeLayout>
</RelativeLayout>